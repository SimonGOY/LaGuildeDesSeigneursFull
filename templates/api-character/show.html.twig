{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Personnage</h1>

    <div class="col-4 offset-4 text-center bg-light">
        <p> Je m'appelle <strong>{{ character.name }}</strong>. {{ gender(character.kind)|raw }}</p>
        <p> Je fais partie de La Guilde des Seigneurs !</p>
        <p> Je suis {{ feminin(character.kind, 'un') }} <strong>{{ character.kind }}</strong> de la caste <strong>{{ character.caste }}</strong>.</p>
        <p> Mon surnom est <strong>{{ character.surname }}</strong>.</p>
        <p> Mon intelligence est de <strong>{{ character.intelligence }}</strong> et ma force de <strong>{{ character.strength }}</strong>.</p>
        <p> Je suis assez {{ feminin(character.kind, 'fort') }} dans <strong>{{ character.knowledge }}</strong>.</p>
        <p> Ma santé est de <strong>{{ character.health }}</strong> et j'ai une puissance de <strong>{{ character|puissance }}</strong>.</p>
        <p> Mon identifiant est <strong>{{ character.identifier|identifier }}</strong>.</p>
    </div>

    <div class="col-6 offset-3">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ character.id }}</td>
                </tr>
                <tr>
                    <th>Identifier</th>
                    <td>{{ character.identifier }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ character.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ character.slug }}</td>
                </tr>
                <tr>
                    <th>Kind</th>
                    <td>{{ character.kind }}</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>{{ character.surname }}</td>
                </tr>
                <tr>
                    <th>Caste</th>
                    <td>{{ character.caste }}</td>
                </tr>
                <tr>
                    <th>Knowledge</th>
                    <td>{{ character.knowledge }}</td>
                </tr>
                <tr>
                    <th>Intelligence</th>
                    <td>{{ character.intelligence }}</td>
                </tr>
                <tr>
                    <th>Strength</th>
                    <td>{{ character.strength }}</td>
                </tr>
                <tr>
                    <th>Health</th>
                    <td>{{ character.health }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="https://la-guilde-des-seigneurs.com/medias{{ character.image }}" class="img-thumbnail"></td>
                </tr>
                <tr>
                    <th>Creation</th>
                    <td>{{ character.creation ? character.creation|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Modification</th>
                    <td>{{ character.modification ? character.modification|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('api_character_index') }}" class="btn btn-outline-light my-2">Retour à la liste</a>

        <a href="{{ path('api_character_edit', {'identifier': character.identifier}) }}" class="btn btn-outline-dark my-2">Éditer</a>
    </div>

    {{ include('api-character/_delete_form.html.twig') }}
{% endblock %}
